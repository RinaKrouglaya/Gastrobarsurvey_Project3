<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
          <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/textBrownColor</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="biggerTextStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/biggerTextSize</item>
        <item name="colorAccent">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/smallTextMargin_horizontal</item>


    </style>

    <style name="smallerTextStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/smallerTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/smallTextMargin_horizontal</item>

    </style>

    <style name="radiogroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>

    </style>

    <style name="radiobuttonStyle">
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:paddingLeft">@dimen/margin5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/minTextSize</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>

    </style>


    <style name="minTextStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/minTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/smallTextMargin_horizontal</item>

    </style>

    <style name="LowerButtonsStyle">
        <item name="android:textSize">@dimen/minTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/smallTextMargin_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="ProceedButtonStyle">
              <item name="android:textSize">@dimen/minTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin20</item>
        <item name="android:layout_marginTop">@dimen/margin5</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:shadowColor">#F44336</item>
        <item name="android:shadowDx">@dimen/shadow_dimension</item>
        <item name="android:shadowDy">@dimen/shadow_dimension</item>
        <item name="android:shadowRadius">@dimen/shadow_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="exitButtonStyle">

        <item name="android:textSize">@dimen/verySmallTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/inner_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin20</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="entryButtonStyle">

        <item name="android:textSize">@dimen/smallerTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:layout_margin">@dimen/inner_margin</item>
    </style>

</resources>