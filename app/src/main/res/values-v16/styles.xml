<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="biggerTextStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/biggerTextSize</item>
        <item name="android:textColor">#3E2723</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:layout_marginHorizontal">@dimen/smallTextMargin_horizontal</item>


    </style>

    <style name="ProceedButtonStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/minTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/margin20</item>
        <item name="android:layout_marginTop">@dimen/margin5</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:shadowColor">#F44336</item>
        <item name="android:shadowDx">@dimen/shadow_dimension</item>
        <item name="android:shadowDy">@dimen/shadow_dimension</item>
        <item name="android:shadowRadius">@dimen/shadow_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="radiobuttonStyle">
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:paddingLeft">@dimen/margin5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/minTextSize</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>

    </style>

    <style name="smallerTextStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/smallerTextSize</item>
        <item name="android:textColor">@color/textBrownColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:layout_marginLeft">@dimen/smallTextMargin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/smallTextMargin_horizontal</item>

    </style>


</resources>